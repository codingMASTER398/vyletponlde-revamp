<div class="top">
  <div class="left">
    <button class="themeToggle">
      <img
        src="/img/daybreaker.png"
        onload="loadedImg(1)"
        alt="Switch between dark mode and light mode"
      />
    </button>
  </div>
  <div class="right">
    <div class="volumeDiv">
      <img src="/img/volumeLight.png" alt="Volume icon" class="volIcon" />
      <input type="range" min="0" max="1" step="0.01" class="volumeSlider" />
    </div>
    <div>
      <input type="checkbox" for="noLoudSounds" />
      <label for="noLoudSounds">no abrupt silly sounds</label>
    </div>
    <div>
      <input type="checkbox" for="reduceMotion" />
      <label for="reduceMotion">reduce motion</label>
    </div>
    <div>
      <input type="checkbox" for="hideConfetti" />
      <label for="hideConfetti">hide confetti</label>
    </div>
    <div>
      <input type="checkbox" for="reduceAqua" />
      <label for="reduceAqua">reduce aquaness</label>
    </div>
    <div>
      <label for="background">bg</label>
      <select name="background" id="background">
        <option value="none">none</option>
        <option value="maxresdefault.jpg">Silence in Ponyville</option>
        <option value="djgoober.jpg">The Story of DJ Goober</option>
        <option value="dolphins.jpg">Dolphins</option>
        <option value="queenIsBack.png">The Queen is Back</option>
        <option value="gwaw.png">Girls Who Are Wizards</option>
        <option value="paradiseValley.png">I Was The Loner Of Paradise Valley</option>
        <option value="carousel.png">Carousel</option>
        <option value="webpunk.png">Webpunk</option>
        <option value="lps.png">Love & Ponystep</option>
        <option value="dragonfly.png">Walking Beside a Dragonfly</option>
        <option value="antonymph.png">ANTONYMPH</option>
      </select>
    </div>
  </div>
</div>

